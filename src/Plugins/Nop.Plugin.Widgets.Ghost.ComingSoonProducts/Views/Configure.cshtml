
@model Nop.Plugin.Widgets.Ghost.ComingSoonProducts.Models.ConfigurationModel
@using Nop.Web.Framework;
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")



<form asp-controller="WidgetsComingSoonProducts" asp-action="Configure" method="post">
    <div class="cards-group">
         
        <div class="card card-default">
            <div class="card-body">

                <div class="form-group row">
                    <div class="col-md-4">
                        <nop-override-store-checkbox asp-for="CategoryId_OverrideForStore" asp-input="CategoryId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="CategoryId" />
                    </div>
                    <div class="col-sm-8">
                        <nop-select asp-for="CategoryId" asp-items="Model.AvailableCategories" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <nop-override-store-checkbox asp-for="SectionName_OverrideForStore" asp-input="SectionName" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="SectionName" />
                    </div>
                    <div class="col-md-8">
                        <nop-editor asp-for="SectionName" />
                        <span asp-validation-for="SectionName"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-9">
                        &nbsp;
                    </div>
                    <div class="col-md-3">
                        <input type="submit" name="save" class="btn btn-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>