
@model Nop.Plugin.Widgets.Ghost.ConfirmationModal.ConfirmationModalSettings
@{
    Html.AddScriptParts(ResourceLocation.Footer, Url.Content("~/Plugins/Widgets.Ghost.ConfirmationModal/Content/js/confirmation.modal.js"));
}

<script asp-location="Footer">
    //Age verification popup.
    jQuery(document).ready(function ($) {
        var settings = @Html.Raw(Json.Encode(Model));
        var topic = settings.Topic;
        var title = settings.Title;
        var yesText = settings.YesText;
        var noText = settings.NoText;
        if (localStorage.getItem('advertOnce') !== 'true') {
            displayPopupContentFromUrlYesNoAgeVerification('@Url.RouteUrl("TopicPopup", new {SystemName = Model.Topic})', title, yesText, noText, true);
        }
    });
</script>

